<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:weightSum="8"
    tools:context=".PhraseFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.4"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/category_title_back_color"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        tools:layout_editor_absoluteX="10dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cat_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="6sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            android:gravity="center_horizontal|center_vertical"
            android:text="Пожелания доброго утра\nФраза дня"
            android:textColor="@color/category_title_color" />
    </androidx.cardview.widget.CardView>

    <View
        android:layout_weight="1.8"
        android:layout_width="match_parent"
        android:layout_height ="0dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="4"
        app:cardBackgroundColor="@color/phrase_color_1"
        app:cardCornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="10dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/phraseTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/hi_melody_cyrillic"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/default_phrase"
            android:textColor="@android:color/white" />
    </androidx.cardview.widget.CardView>

    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height ="0dp"/>

</LinearLayout>

